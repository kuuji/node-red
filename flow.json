        "func": "const configuration = new oai.Configuration({\n    apiKey: msg.openapi_key,\n});\nconst openai = new oai.OpenAIApi(configuration);\n\nnode.status({ fill: \"green\", shape: \"dot\", text: \"Querying openapi...\" });\n\nconst completion = await openai.createChatCompletion({\n    model: \"gpt-3.5-turbo\",\n    messages: [\n        { role: \"system\", content: \"You are a sarcastic mean assistant\" },\n        { role: \"user\", content: global.get(\"homeassistant\").homeAssistant.states[\"input_text.gpt_instructions\"].state }\n    ],\n});\n\nnode.status({});\n\n\nmsg.completion = completion\n\nreturn msg",
